<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.booking.ServiceSelectionFragment">

    <LinearLayout
        android:id="@+id/selected_salon_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/selected_salon_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_launcher_background"/>

        <TextView
        android:id="@+id/selected_salon_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salon Name"
        android:layout_marginTop="2dp" />
        <TextView
            android:id="@+id/selected_salon_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salon Address"
            android:layout_marginTop="2dp" />
        <TextView
            android:id="@+id/selected_salon_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salon Type"
            android:layout_marginTop="2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
               android:src="@drawable/ic_launcher_background"/>
            <TextView
                android:id="@+id/selected_salon_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Salon Rating"/>


        </LinearLayout>

    </LinearLayout>
   
    <ExpandableListView
        android:id="@+id/service_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selected_salon_detail"
        android:layout_above="@+id/service_selection_fragment_btn"/>




    <LinearLayout
        android:id="@+id/service_selection_fragment_btn"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:weightSum="2"

        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_cancel1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CANCEL"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack" />
        <Button
            android:id="@+id/btn_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BOOK"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack"/>


    </LinearLayout>

</RelativeLayout>