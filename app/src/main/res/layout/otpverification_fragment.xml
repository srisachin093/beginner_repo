<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter OTP to verify your Number:"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="+91-9876543210" />


    </LinearLayout>

    <TextView
        android:id="@+id/user_phone_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="5dp"
        android:text="Wrong Number"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/user_otp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:hint="_ _ _ _ _ _" />


    <Button
        android:id="@+id/user_VerifyOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="VERIFY"
        android:layout_gravity="center"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
       android:layout_marginStart="25dp"
       android:layout_marginEnd="25dp"
       android:orientation="horizontal">
    <TextView
        android:id="@+id/user_resendOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP"
        android:textStyle="bold"
        android:enabled="false"/>

       <TextView
           android:id="@+id/timer"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="200dp"
           android:hint="30"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="s"/>


   </LinearLayout>

</LinearLayout>
