<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="180dp"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_marginStart="25dp"

        android:layout_marginVertical="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:id="@+id/salon_img"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/salon_img"
                android:padding="2dp"
                android:id="@+id/salon_name"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/salon_name"
                android:padding="2dp"
                android:id="@+id/salon_address"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_below="@id/salon_address"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/salon_rating"
                android:layout_below="@id/salon_address"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_alignRight="@id/salon_img"
                android:textStyle="bold"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>